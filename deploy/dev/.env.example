# ============================================
# OmniShop360 - Environment Variables
# ============================================

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=omnishop360
DB_USERNAME=omnishop
DB_PASSWORD=omnishop_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/omnishop360
KEYCLOAK_JWK_SET_URI=http://localhost:8080/realms/omnishop360/protocol/openid-connect/certs

# Backend Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8081
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201

# Superadmin Configuration
SUPERADMIN_EMAIL=admin@omnishop360.com
SUPERADMIN_USERNAME=superadmin

# SMTP Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_FROM=noreply@omnishop360.com
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SSL=false
SMTP_STARTTLS=true
